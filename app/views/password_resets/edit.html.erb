<div class="container-signup">
<%= form_with(model: @user, url: password_reset_path(params[:id])) do |f| %>
     <div class="mx-auto" style="max-width: 540px;">
      <h2 style="text-align:center;" class="mb-3 display-5">Reset password</h2>
      <hr>
          <div class="mb-3">
            <%= render 'shared/error_messages' %>
            <%= hidden_field_tag :email, @user.email %><%= f.label :password %>
            <%= f.label :password, class: "form-label" %><br>
            <%= f.password_field :password, class: "form-control" %>
          </div>
          <div class="mb-3">
            <%= f.label :password_confirmation, class: "form-label" %><br>
            <%= f.password_field :password_confirmation, class: "form-control" %>
          </div>
          <div class="actions mb-3">
            <%= f.submit 'Update password',class: "btn btn-primary" %>
          </div>
        </div>
        <hr>
  <% end %>
</div>
