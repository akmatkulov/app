<div class="container">
  <%= form_with model: @user do |f| %>
     <div class="mx-auto" style="max-width: 540px;">
      <h2 style="text-align:center;" class="mb-3 display-5">Instagram</h2>
      <hr>
      <div class="row g-3">
        <div class="col-md-6">
            <%= render 'shared/error_messages' %>
            <%= image_tag('insta.svg', size: '270x270') %>
        </div>
        <div class="col-md-6">
          <div class="mb-3">
            <%= f.label :user_name, class: "form-label" %><br />
            <%= f.text_field :user_name, class: "form-control" %>
          </div>
          <div class="mb-3">
            <%= f.label :name, 'Full Name', class: "form-label" %><br />
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="mb-3">
            <%= f.label :email, class: "form-label" %><br />
            <%= f.email_field :email, class: "form-control" %>
          </div>
          <div class="mb-3">
            <%= f.label :password, class: "form-label" %>
            <%= f.password_field :password, class: "form-control" %>
          </div>
          <div class="mb-3">
            <%= f.label :password_confirmation, class: "form-label" %><br />
            <%= f.password_field :password_confirmation, class: "form-control" %>
          </div>
          <div class="actions mb-3">
            <%= f.submit "Зарегистрироваться", class: "btn btn-primary" %>
          </div>
        </div>
        <hr>
        <span style="text-align:center;">У вас есть аккаунт?
          <%= link_to "Войти", '#' %>  </span>
      </div>
    </div>
<% end %>
</div>

  